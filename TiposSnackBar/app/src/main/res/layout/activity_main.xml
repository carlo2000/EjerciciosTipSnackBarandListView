<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonSnackBarShort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="SnackBarShort"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSnackBarLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="SnackBarLong"
        app:layout_constraintEnd_toEndOf="@+id/buttonSnackBarShort"
        app:layout_constraintStart_toStartOf="@+id/buttonSnackBarShort"
        app:layout_constraintTop_toBottomOf="@+id/buttonSnackBarShort" />

    <Button
        android:id="@+id/buttonSnackBarUndefine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="SnackBarUndefine"
        app:layout_constraintEnd_toEndOf="@+id/buttonSnackBarLong"
        app:layout_constraintStart_toStartOf="@+id/buttonSnackBarLong"
        app:layout_constraintTop_toBottomOf="@+id/buttonSnackBarLong" />
</androidx.constraintlayout.widget.ConstraintLayout>